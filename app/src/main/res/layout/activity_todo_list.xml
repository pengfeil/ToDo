<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TodoListActivity">

    <com.wangyazhou.todo.view.TodoRelativeLayout
        android:id="@+id/todo_list_main_content_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff" >

        <com.wangyazhou.todo.view.TopBar
            android:id="@+id/todo_list_top_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"></com.wangyazhou.todo.view.TopBar>

        <ListView
            android:id="@+id/todo_list_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/todo_list_top_bar"
            android:divider="#ccc"
            android:cacheColorHint="#00000000"
            android:background="@android:color/white"
            android:dividerHeight="1px" />
    </com.wangyazhou.todo.view.TodoRelativeLayout>

    <com.wangyazhou.todo.view.SlideMenu
        android:id="@+id/todo_list_slide_menu"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"></com.wangyazhou.todo.view.SlideMenu>
</FrameLayout>
